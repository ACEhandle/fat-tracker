class FoodItem {
  String name;
  double protein, carbs, fat, calories;
  String? brand;
}

class Meal {
  String name;
  List<FoodItem> ingredients;
  DateTime createdAt;
}

class InventoryItem {
  FoodItem food;
  int quantity;
  DateTime? expiryDate;
}

class Workout {
  String type;
  Duration duration;
  double caloriesBurned;
  DateTime date;
}
